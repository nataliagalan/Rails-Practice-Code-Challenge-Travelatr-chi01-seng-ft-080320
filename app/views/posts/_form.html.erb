<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
 <p><%= error %></p> 
  <% end %>
<% end %>


<%= form_for @post do |f| %>

<%= f.label :title, "Enter a title:" %>
<%= f.text_field :title %>
<br><br>
<%= f.label :content, "Write your post:" %>
<%= f.text_area :content %>
<br><br>

<%= f.collection_select(:blogger_id, Blogger.all, :id, :name) %>
<br><br>
<%= f.collection_select(:destination_id, Destination.all, :id, :name) %>
<br><br>
<%= f.submit %>
  
<% end %>


